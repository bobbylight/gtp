# This is the top-most EditorConfig file
root = true

[*.ts]
indent_style = tab
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = true
charset = utf-8
insert_final_newline = true
max_line_length = 120

# Honored by IntelliJ, but not all editors
quote_style = single

[*.json]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
