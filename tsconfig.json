{
    "compilerOptions": {
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "outDir": "dist/",
        "preserveConstEnums": true,
        "rootDir": "src/",
        "strictNullChecks": true,
        "sourceMap": true,
        "target": "es5",
        "diagnostics": true
    },
    "exclude": [
        "node_modules",
        "dist",
        "dist-all"
    ]
}
